<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:src="@mipmap/back"/>

        <RadioGroup
            android:id="@+id/rg_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@mipmap/guide_tab_left"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_field"
                style="@style/select_field_rb"
                android:text="领域"
                android:textColor="@color/colorWhite"/>

            <View
                android:id="@+id/line_left"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorInterface"/>

            <RadioButton
                android:id="@+id/rb_word"
                style="@style/select_field_rb"
                android:text="关键字"/>

            <View
                android:id="@+id/line_right"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorInterface"/>

            <RadioButton
                android:id="@+id/rb_people"
                style="@style/select_field_rb"
                android:text="学者"/>

        </RadioGroup>

        <ImageView
            android:id="@+id/img_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:visibility="invisible"
            android:src="@mipmap/guide_user_icon"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_line"/>

    <RelativeLayout
        android:id="@+id/rl_select_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:wheel="http://schemas.android.com/apk/res-auto"
              android:id="@+id/frame_login"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/guide_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:src="@mipmap/guide_text"/>

    <TextView
        style="@style/text_12sp_colorwhite"
        android:layout_marginTop="18.3dp"
        android:text="@string/slogan"
        android:textSize="18sp"/>

    <TextView
        style="@style/text_12sp_colorwhite"
        android:layout_margin="10dp"
        android:text="@string/giiisp_com"
        android:textSize="@dimen/text_size"/>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:visibility="invisible"
        wheel:matProg_barColor="@color/colorWhite"
        wheel:matProg_progressIndeterminate="true"/>

    <TextView
        android:id="@+id/tv_register"
        style="@style/text_12sp_colorwhite"
        android:layout_marginBottom="21dp"
        android:background="@mipmap/guide_registered_bg"
        android:gravity="center"
        android:layout_width="270dp"
        android:text="@string/login"
        android:textSize="@dimen/text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone_login"
            android:layout_width="130dp"
            android:layout_height="39.3dp"
            android:background="@mipmap/guide_login_bg"
            android:drawableStart="@mipmap/phone_logo"
            android:drawablePadding="5.3dp"
            android:gravity="center"
            android:paddingStart="22.7dp"
            android:paddingEnd="21.7dp"
            android:text="@string/phone_login"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/tv_weixin_login"
            android:layout_width="130dp"
            android:layout_height="39.3dp"
            android:layout_marginStart="10dp"
            android:background="@mipmap/guide_login_bg"
            android:drawableStart="@mipmap/weixin_logo"
            android:drawablePadding="5.3dp"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/weixin_login"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tourist"
        android:layout_marginBottom="38dp"
        android:layout_marginTop="6.7dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/tourist"
        style="@style/text_12sp_colorwhite"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:orientation="vertical"
    >

    <com.giiisp.giiisp.widget.MViewPager
        android:id="@+id/viewPager_giiisp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="47dp"
        android:scrollbars="none">
    </com.giiisp.giiisp.widget.MViewPager>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/tabLayout_giiisp"
        android:background="@color/colorTextLineGrey"/>

    <com.jpeng.jptabbar.JPTabBar
        android:id="@+id/tabLayout_giiisp"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorWhite"
        android:paddingTop="2dp"
        app:BadgeColor="#F99C71"
        app:BadgeHorizonalMargin="16dp"
        app:BadgePadding="4dp"
        app:BadgeVerticalMargin="6dp"
        app:TabAnimate="None"
        app:TabIconSize="20dp"
        app:TabMargin="4dp"
        app:TabNormalColor="@color/colorTextLineGrey"
        app:TabSelectColor="@color/colorInterface"
        app:TabTextSize="12sp"/>

    <!--    <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="47dp"
            android:layout_alignParentBottom="true"
            android:layout_height="47dp"/>-->
    <!--app:TabMiddleView="@layout/layout_center_tab"-->
</RelativeLayout>
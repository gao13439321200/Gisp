<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8f000000">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/linear_screen"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/colorWhite"
                  android:orientation="vertical">

        <TextView
            style="@style/text_12sp_colorblack"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="20dp"
            android:text="@string/screening_certificate"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/tag_flowlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:background="@color/colorAuxiliary"
                android:gravity="center"
                android:text="@string/empty"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:background="@color/colorInterface"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
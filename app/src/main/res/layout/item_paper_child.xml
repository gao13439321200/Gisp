<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
    >

    <FrameLayout
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="matrix"
            android:src="@mipmap/subscribe_item_paly"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_version"
            style="@style/text_13sp_colorblack"
            />

        <TextView
            android:id="@+id/tv_paper_browse"
            style="@style/item_paperchild_icon"
            android:drawableStart="@mipmap/subscribe_item_browse"/>

        <ImageView
            android:id="@+id/iv_paper_collected"
            style="@style/item_paperchild_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/collected_selector"/>

        <TextView
            android:id="@+id/tv_paper_collected"
            style="@style/item_paperchild_icon"
            android:paddingStart="3dp"
            android:paddingEnd="0dp"/>

        <ImageView
            android:id="@+id/iv_paper_download"
            style="@style/item_paperchild_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/download_selector"/>

        <TextView
            android:id="@+id/tv_paper_download"
            style="@style/item_paperchild_icon"
            android:paddingStart="3dp"
            android:paddingEnd="0dp"/>

        <TextView
            android:id="@+id/tv_paper_problem"
            style="@style/item_paperchild_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableStart="@mipmap/subscribe_item_problem"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_add"
            style="@style/widthheight_wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="2dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/add_selector"/>

        <ImageView
            android:id="@+id/iv_menu"
            style="@style/widthheight_wrap_content"
            android:paddingBottom="10dp"
            android:paddingEnd="2dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:src="@mipmap/subscribe_item_spot"/>
    </LinearLayout>
</LinearLayout>